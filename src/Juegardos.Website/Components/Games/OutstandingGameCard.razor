@namespace Juegardos.Website.Components
<div class="outstanding-game-card">
    <img src="@Game.Image" />
    <div class="outstanding-game-details">
        <h1>@Game.Title</h1>
        <h4>Call of Duty: Civil War transporta a los jugadores al corazón de la volátil batalla geopolítica de la Guerra Fría, a principios de la década de 1980.</h4>
        <div class="outstanding-buttons">
            <button class="outstanding-button play-button"><i class="material-icons">play_arrow</i><span>Jugar</span></button>
            <button class="outstanding-button info-button"><i class="material-icons">info_outline</i><span>Más información</span></button>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public Game Game { get; set; } = null!;

}
