@namespace Juegardos.Website.Components

<div class="backdrop opacity-background @(_showModal ? "show" : "")" @onclick="Close">
    <div class="modal @(_showModal ? "show" : "") @(Expanded ? "expanded" : "")" tabindex="-1">
        <div class="modal-header">
            <h3 class="modal-title">
                @if (TitleContent is null)
                {
                    @Title
                }
                else
                {
                    @TitleContent
                }
            </h3>
            <i class="material-icons" @onclick="Close">close</i>
        </div>
        <div class="modal-body">
            @ChildContent
        </div>
    </div>
</div>

@code {

    [Parameter]
    public RenderFragment? TitleContent { get; set; }
    [Parameter]
    public string Title { get; set; } = "";
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public bool Expanded { get; set; }

    private bool _showModal = false;

    public void Open()
    {
        _showModal = true;
        StateHasChanged();
    }

    public void Close()
    {
        _showModal = false;
        StateHasChanged();
    }

}