@namespace Juegardos.Website.Components

@if(Game.IsFavourite)
{
    <i class="material-icons starred" @onclick="() => Game.IsFavourite = !Game.IsFavourite">star</i>
}
else
{
    <i class="material-icons" @onclick="() => Game.IsFavourite = !Game.IsFavourite">star</i>
}

@code {

    [Parameter]
    public Game Game { get; set; } = new();

}
