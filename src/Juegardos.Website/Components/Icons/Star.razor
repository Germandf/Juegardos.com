@namespace Juegardos.Website.Components

@if(Game.IsFavourite)
{
    <i class="material-icons star starred" @onclick="() => Game.IsFavourite = !Game.IsFavourite" @onclick:stopPropagation>star</i>
}
else
{
    <i class="material-icons star" @onclick="() => Game.IsFavourite = !Game.IsFavourite" @onclick:stopPropagation>star</i>
}

@code {

    [Parameter]
    public Game Game { get; set; } = new();

}
